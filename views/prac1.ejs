      crossorigin="anonymous"
    ></script>
    <script
      src="https://code.jquery.com/jquery-3.6.1.min.js"
      integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <h2>Hello Jerrywelt</h2>
    <button type="button" onclick="hello();">hello</button>
    <button type="button" onclick="study();">study</button>
    <button type="button" onclick="bye();">bye</button>
    <div id="comment"></div>
  </body>
  <script>
    var socket = io.connect();
    function hello() {
      socket.emit("hello", "client: hello");

      socket.on("hello", (hello) => {
        console.log(hello);
        $("div").html(hello);
        // document.getElementById("comment").innterText = hello;
      });
    }
    function study() {
      socket.emit("study", "client: study");

      socket.on("study", (study) => {
        console.log(study);
        $("div").html(study);
      });
    }
    function bye() {
      socket.emit("bye", "client: bye");

      socket.on("bye", (bye) => {
        console.log(bye);
        $("div").html(bye);
      });
    }
  </script>
</html>
