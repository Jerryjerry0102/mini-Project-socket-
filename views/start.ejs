  <body>
    <h3>Welcome Jerry Chat</h3>
    <input type="text" id="name" name="name" />
    <button type="button" onclick="openChat();">입장</button>
  </body>
  <script>
    var socket = io.connect();

    function openChat() {
      let name = { name: $("#name").val() };
      axios({
        url: "/jerry/start/",
        method: "post",
        data: name,
      }).then((name) => {
        console.log(name.data);
        socket.emit("userName", name.data);
        location.href = "/jerry/chat";
      });
    }

    // console.log(name);
