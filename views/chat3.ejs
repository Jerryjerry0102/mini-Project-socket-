<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- css file -->
    <link rel="stylesheet" href="../static/css/style2.css" />
    <!-- bootstrap cdn -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <!-- fontawesome cdn -->
    <script
      src="https://kit.fontawesome.com/acfe1c41fb.js"
      crossorigin="anonymous"
    ></script>
    <!-- socket cdn -->
    <script
      src="https://cdn.socket.io/4.5.0/socket.io.min.js"
      integrity="sha384-7EyYLQZgWBi67fBtVxw60/OWl1kjsfrPFcaU0pp0nAh+i8FD068QogUvg85Ewy1k"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="container">
      <!-- chat-header -->
      <div class="header">
        <div class="header-img">
          <img src="../static/img/odung.jpg" />
        </div>
        <div class="active">
          <div>Jerry</div>
          <div>3 hours ago...</div>
        </div>
        <div class="header-icons">
          <i class="fa fa-phone"></i>
          <i class="fa fa-video-camera"></i>
          <i class="fa fa-info-circle"></i>
        </div>
      </div>
      <!-- chat-main -->
      <div class="chat-main">
        <!-- received chats -->
        <div class="chats received-chats">
          <div class="chats-img received-chats-img">
            <img src="../static/img/odung.jpg" />
          </div>
          <div class="chats-msg received-chats-msg">
            <div>Hi! This is message from Tom Hi! This is message from Tom</div>
            <span class="time">11:01 PM | September 15</span>
          </div>
        </div>
        <!-- outgoing chats -->
        <div class="chats outgoing-chats">
          <div class="chats-msg outgoing-chats-msg">
            <div>Hi! This is message from me Hi! This is message from me</div>
            <span class="time">11:01 PM | September 15</span>
          </div>
          <div class="chats-img outgoing-chats-img">
            <img src="../static/img/odung.jpg" />
          </div>
        </div>

        <!-- received chats -->
        <div class="chats received-chats">
          <div class="chats-img received-chats-img">
            <img src="../static/img/odung.jpg" />
          </div>
          <div class="chats-msg received-chats-msg">
            <div>Hi! This is message from Tom Hi! This is message from Tom</div>
            <span class="time">11:01 PM | September 15</span>
          </div>
        </div>
        <!-- outgoing chats -->
        <div class="chats outgoing-chats">
          <div class="chats-msg outgoing-chats-msg">
            <div>Hi! This is message from me Hi! This is message from me</div>
            <span class="time">11:01 PM | September 15</span>
          </div>
          <div class="chats-img outgoing-chats-img">
            <img src="../static/img/odung.jpg" />
          </div>
        </div>
      </div>
      <!-- chat-bottom -->
      <div class="chat-bottom">
        <div class="bottom-icons">
          <i class="fa fa-plus-circle"></i>
          <i class="fa fa-camera"></i>
          <i class="fa fa-microphone"></i>
          <i class="fa fa-smile-o"></i>
        </div>
        <div class="chat-input">
          <input type="text" placeholder="write message..." />
          <span class="input-append">
            <i class="fa fa-paper-plane"></i>
          </span>
        </div>
      </div>
    </div>
  </body>
</html>
